<%- include("partials/header"); -%>
    <h1>Calorie App</h1>
    <form  action="/calculateTDEE" method="post">
      <div class=" col-lg-offset-3">
        <div class="form-group row">
          <label for="form1" class="col-sm-2 text-secondary col-form-label">Name</label>
          <div class="col-lg-6 ">
            <input  type="text" class="form-control " id="form1" name="name" placeholder="Enter your name" autocomplete="off" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="form2" class="col-sm-2 col-form-label">Weight</label>
          <div class="col-lg-6">
            <input  type="number" class="form-control" id="form2" name="weight" placeholder="Enter your body weight in Kg" autocomplete="off" required>
          </div>
        </div>
      <div class="form-group row">
        <label for="form3" class="col-sm-2 col-form-label">Body fat</label>
        <div class="col-lg-6">
          <input  type="number" class="form-control" id="form3" name="bodyFat" placeholder="Enter your body fat in %" autocomplete="off" required>
        </div>
      </div>
      <div class="form-group row">
        <label for="activity level" class="col-sm-2 col-form-label font-weight-light"> Activity level</label>
        <div class="col-lg-6">

          <select name="activityLevel" class="form-control " id="activity level" placeholder="Choose your activity level" required>
          <option value="">None</option>
          <option value="1.2">sedetary-1.2</option>
          <option value=1.375>lightlyActive-1.375</option>
          <option value=1.55>moderatelyActive-1.55</option>
          <option value=1.725>veryActive-1.725</option>
          <option value=1.9>extraActive-1.9</option>
        </select>
        </div>
      </div>
</div>

  <div class="homebutton">
        <button  type="submit" class="btn btn-outline-dark" name="button">calculateTDEE</button>
    </div>

    </form>

<%- include("partials/footer"); -%>
